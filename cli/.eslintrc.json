{
    "parser": "@typescript-eslint/parser",
    "plugins": ["prettier", "@typescript-eslint"],
    "extends": [
        "next/core-web-vitals",
        "airbnb-base",
        "prettier",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "env": {
        "node": true,
        "es2021": true
    },
    "rules": {
        "import/no-unresolved": "off", // don't trigger an error when importing from a path
        "import/extensions": "off", // don't trigger an error when importing from a path
        "prettier/prettier": ["warn"], // warn when prettier finds an error
        "@next/next/no-img-element": "off", // don't trigger an error when using <img> tag
        "no-console": "off" // don't trigger an error when using console.log
    }
}
